{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "Storefront Backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon dist/server.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jasmine-ts --config=tsconfig.test.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "clean:dist": "rm -rf dist",
    "clean:cache": "rm -rf node_modules/.cache",
    "rebuild": "npm run clean && npm install && npm run build",
    "check:env": "ts-node -e \"import { verifySecurityConfig } from './src/config/security.config'; console.log('Security config status:', verifySecurityConfig());\"",
    "db:create": "ts-node src/config/create-db.utils.ts",
    "db:test": "ts-node src/utils/db-test.utils.ts",
    "db:migrate": "db-migrate",
    "db:populate": "psql -d storefront_dev -f migrations/sqls/populate_db.sql"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.5.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/express": "^5.0.0",
    "@types/jasmine": "^5.1.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^6.0.2",
    "globals": "^15.13.0",
    "jasmine": "^3.99.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "nodemon": "^3.0.2",
    "nyc": "^17.1.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^4.6.2",
    "typescript-eslint": "^8.18.1"
  },
  "license": "ISC"
}
