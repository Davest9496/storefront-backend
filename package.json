{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "Storefront Backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "NODE_ENV=test ts-node tests/setup.ts",
    "test:watch": "NODE_ENV=test nodemon --exec 'yarn test'",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "clean:dist": "rm -rf dist",
    "clean:cache": "rm -rf node_modules/.cache",
    "rebuild": "yarn run clean && yarn install && yarn run build",
    "check:env": "ts-node -e \"import { verifySecurityConfig } from './src/config/security.config'; console.log('Security config status:', verifySecurityConfig());\"",
    "db:create": "ts-node src/config/create-db.utils.ts",
    "db:test": "ts-node src/utils/db-test.utils.ts",
    "db:migrate": "db-migrate",
    "db:populate": "psql -d storefront_dev -f migrations/sqls/populate_db.sql"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jasmine": "^5.1.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "jasmine": "^5.5.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.4.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4"
  },
  "license": "ISC"
}